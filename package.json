{
  "name": "xrun-debug",
  "displayName": "Xrun Debug",
  "version": "0.0.2",
  "publisher": "boreas-technologies",
  "description": "Debug support for Verilog/SystemVerilog Xcelium simulations",
  "author": {
    "name": "Xavier Dufour",
    "email": "xdufour@boreas.ca"
  },
  "license": "MIT",
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.66.0"
  },
  "icon": "images/boreas.ico",
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/xdufour/vscode-xrun-debugger.git"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish-pre-release": "vsce publish --pre-release",
    "vscode:prepublish": "rimraf dist && npm run -S esbuild-base -- --minify",
    "test": "npm run typecheck"
  },
  "devDependencies": {
    "@types/async": "^3.2.15",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "await-notify": "^1.0.1",
    "base64-js": "^1.5.1",
    "esbuild": "^0.14.29",
    "eslint": "^8.12.0",
    "events": "^3.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "url": "^0.11.0",
    "vsce": "^2.7.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onDebugResolve:xrun",
    "onDebugDynamicConfigurations:xrun",
    "onCommand:extension.xrun-debug.getRunSimArgs"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "systemverilog"
      },
      {
        "language": "verilog"
      }
    ],
    "debuggers": [
      {
        "type": "xrun",
        "languages": [
          "systemverilog",
          "verilog"
        ],
        "label": "Xrun Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "env": {
                "type": "string",
                "description": "Absolute path to working directory",
                "default": "${workspaceFolder}"
              },
              "program": {
                "type": "string",
                "description": "Absolute path to xrun script executable, or relative path if 'env' is specified",
                "default": ""
              },
              "args": {
                "type": "string",
                "description": "Command line arguments. Can optionally be a path to a yml file to parse for arguments selection to be displayed, or use \"${command:AskForArguments}\" to manually enter them upon launch.",
                "default": ""
              },
              "consoleKeywords": {
                "type": "array",
                "description": "Keywords to highlight in console output during a debugging session",
                "default": []
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch",
                "default": true
              },
              "noDebug": {
                "type": "boolean",
                "description": "Run simulation without debug",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "xrun",
            "request": "launch",
            "name": "Manual",
            "env": "${workspaceFolder}",
            "program": "Path to xrun script",
            "args": "${command:AskForArguments}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Xrun Debug: Launch",
            "description": "A new configuration for 'debugging' a user selected SystemVerilog simulation",
            "body": {
              "type": "xrun",
              "request": "launch",
              "name": "Manual",
              "env": "${workspaceFolder}",
              "program": "run_sim.sh",
              "args": "^\"\\${command:AskForArguments}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForArguments": "extension.xrun-debug.getRunSimArgs"
        }
      }
    ]
  },
  "dependencies": {
    "async": "^3.2.4",
    "child_process": "^1.0.2",
    "fs": "^0.0.1-security",
    "readline": "^1.3.0",
    "util": "^0.12.5",
    "yaml": "^2.1.3"
  }
}
